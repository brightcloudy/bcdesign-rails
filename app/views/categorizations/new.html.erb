<%= provide(:title, "New Categorization") %>
<%= form_for :categorization, url: project_categorizations_path, :method => :post, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :project_id, "Project:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p>
        <%= f.select :project_id, options_from_collection_for_select(@projects, 'id', 'title'), class: "form-control" %>
      </p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, "Category:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <p>
        <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name'), class: "form-control" %>
      </p>
    </div>
  </div>
  <div class="from-group">
  <div class="col-sm-6 col-sm-offset-6">
  <p>
    <%= f.submit "Create Categorization", class: "btn btn-primary" %>
  </p>
  </div>
  </div>
<% end %>
