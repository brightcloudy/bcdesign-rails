<% provide(:title, @category.name) %>
<% if !@projects.empty? %>
  <% @projects.each_slice(3) do |prow| %> 
    <div class="row row-eq-height">
      <% prow.each do |project| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag(project.image.url(:thumb), class: "img-responsive img-rounded") %>
            <div class="caption">
              <h3 class="text-bold"><%= link_to project.title, "/projects/#{project.id}" %><br>
                <% if project.status.eql?("Complete") %>
                  <span class="label label-success ">Complete</span>
                <% end %>
                <% if project.status.eql?("In Progress") %>
                  <span class="label label-warning ">In Progress</span>
                <% end %>
                <% if project.status.eql?("Paused") %>
                  <span class="label label-default ">Paused</span>
                <% end %>
                <%= link_to "Details", "/projects/#{project.id}", class: "btn btn-primary pull-right", role: "button" %>
              </h3>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <div class="row">
    <div class="col-sm-3 col-sm-offset-4">
      <div class="panel panel-default">
        <div class="panel-header">
          <h3 class="text-center">No Projects Found</h3>
        </div>
        <div class="panel-body">
          <p class="text-muted">No projects were found matching the requested category.</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
