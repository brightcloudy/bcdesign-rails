<%= provide(:title, "New Category") %>
<%= form_for :category, url: categories_path, :method => :post, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Category Name" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: "3", placeholder: "Brief Description" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-6">
      <%= f.submit "Create Category", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
